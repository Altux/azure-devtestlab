{
    "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2015-01-01/dtlArtifacts.json",
    "title": "Windows Feature",
    "description": "Windows Feature Add / Remove",
    "tags": [
        "Feature",
		"Add",
		"Remove"
    ],
    "iconUri": "https://chocolatey.org/content/packageimages/Posh-GitHub.0.0.2.png",
    "targetOsType": "Windows",
    "parameters": {
		"FeatureName": {
            "type": "string",
            "displayName": "Feature",
            "description": "Put here the Feature ex: Internet-Explorer-Optional-amd64"*
		}
		
		"Action": {
            "type": "string",
			"allowedValues": [ "enable", "disable" ]
		}	
	},
    "runCommand": {
		"commandToExecute": "[concat('powershell.exe -ExecutionPolicy bypass \"& ./WindowsFeature.ps1 ''', parameters('FeatureName'), ''', parameters('Action'), '''\"')]"
	}
}
